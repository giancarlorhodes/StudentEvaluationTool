@model StudentEvaluationToolWebApp.Models.UserModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<div id="dialogSuccess" class="alert alert-success alert-dismissable" role="alert" hidden="hidden">
    @Model.DialogMessage  <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
</div>
<div id="dialogFailure" class="alert alert-danger alert-dismissable" role="alert" hidden="hidden">
    @Model.DialogMessage  <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
</div>



@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{
   

    <form>
        <div class="form-group">
            <label for="name">First Name</label>
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "alert-danger" })
        </div>
        <div class="form-group">
            <label for="lastname">Last Name</label>
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "alert-danger" })
        </div>
        <div class="form-group">
            <label for="lastname">Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "alert-danger" })
        </div>
        <div class="form-group">
            <label for="name">Username</label>
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "alert-danger" })
        </div>
        <div class="form-group">
            <label for="password">Password (8 - 20 character with 1 number and 1 special character (@@#$%^&+=)</label>
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
            <input type="checkbox" onclick="ShowPassword()">Show Password
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "alert-danger" })
        </div>

        <input type="submit" value="Submit" class="btn btn-primary" />&nbsp;&nbsp;<input type="reset" value="Reset" onclick="ResetForm()" class="btn btn-primary" />
    </form>



}



@section scripts {

    <script type="text/javascript" language="javascript">


        function ResetForm() {

        }

        $(document).ready(function () {

        

            var SuccessOrFailure = @Html.Raw(Json.Encode(Model.DialogMessageType));


            if (SuccessOrFailure === 'Success') {

                $('#dialogSuccess').show();

            } 

             if (SuccessOrFailure === 'Failure') {

                $('#dialogFailure').show();

            }

        });

    </script>

}