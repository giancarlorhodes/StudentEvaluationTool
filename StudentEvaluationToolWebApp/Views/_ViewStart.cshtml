@using StudentEvaluationToolCommon;
@using StudentEvaluationToolWebApp.Models;

@{

    if (Session["UserSession"] != null)
    {
        UserModel lSessionUser;
        lSessionUser = (UserModel)Session["UserSession"];

        if (lSessionUser.RoleID == (int)RoleType.Administrator)
        {
            Layout = "~/Views/Shared/_Layout_Administrator.cshtml";
        }
        else if (lSessionUser.RoleID == (int)RoleType.Evaluator)
        {
            Layout = "~/Views/Shared/_Layout_Evaluator.cshtml";
        }
        else if (lSessionUser.RoleID == (int)RoleType.Employee)
        {
            Layout = "~/Views/Shared/_Layout_Employee.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }
    else {

        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}



